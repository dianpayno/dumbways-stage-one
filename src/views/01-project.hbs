    <section>
        <div class="container">
            
           
        
            
          
            
            <div class="blog-title">
                <h1>Detail info of Project <u>{{project.title}}</u></h1>
            </div>
            

            <div class="container-content">
                
                <div class="content-img">
                    <img src="/{{project.img}}"
                    style="
                    width: 100%;
                    object-fit: cover;
                    "
                    > </div>
                <div class="content-desc">

                        <div><h4>Duration : </h4></div>
                        <div class="duration-1">
                            <div>
                            <img src="/img/tech/calendar.svg">
                            </div>
                            <div>
                            <span>{{project.startDateId}} to {{project.endDateId}}</span>
                            </div>
                        </div>

                        <div class="duration-2">
                            <div>
                            <img src="/img/tech/clock.svg">
                            </div>
                            <div>
                            <span>{{project.duration}}</span>
                            </div>
                        </div>

                        <div class="title"><h4>Technologies:</h4></div>

                                <div class="technologies">
                                  {{#each project.tech}}
                                  {{#if this}}
                                  <div class="technologies-detail">
                                     <div>
                                    <img src="/img/tech/{{@key}}.svg">
                                    </div>
                                    <div>{{@key}}</div>
                                    </div>
                                 {{/if}}
                                 {{/each}}
                                
                                            
                                </div>
                         <div style="
                         margin-top: 10px;
                         margin-bottom: 20px;
